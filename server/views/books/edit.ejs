<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title%></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <lable for="TitleTextField">Title</lable>
          <input
            type="text"
            class="form-control"
            id="TitleTextField"
            
            name="Title"
            value="<%= book.Title %>"
            required
          />
        </div>

        <div class="form-group">
          <lable for="PriceTextField">Price</lable>
          <input
            type="text"
            class="form-control"
            id="PriceTextField"
            
            name="Price"
            value="<%= book.Price %>"
            required
          />
        </div>

        <div class="form-group">
          <lable for="AuthorTextField">Author</lable>
          <input
            type="text"
            class="form-control"
            id="AuthorTextField"
           
            name="Author"
            value="<%= book.Author %>"
            required
          />
        </div>

        <div class="form-group">
          <lable for="GenreTextField">Genre</lable>
          <input
            type="text"
            class="form-control"
            id="GenreTextField"
            
            name="Genre"
            value="<%= book.Genre %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
         <i class="fa fa-check"></i> Submit
        </button>

        <a href="/books" class="btn btn-warning">
          <i class="fa fa-undo"></i> Cancle</a
        >
      </form>
    </div>
  </div>
</div> 

